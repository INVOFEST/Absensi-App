<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    android:background="@drawable/backgroud"
    tools:context=".Activity.MainActivity">
    
    <RelativeLayout

        android:layout_weight="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
            android:src="@drawable/pagi"
            android:id="@+id/greetImg"
            android:layout_width="wrap_content"
            android:layout_height="250dp"/>

        <TextView
            android:layout_marginTop="35dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/greetText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="sans-serif-black"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/Usaha"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="5dp"
                    android:elevation="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:padding="10dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivSeminar"
                            android:padding="5dp"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/seminar"
                            android:text="Kecamatan"/>

                        <TextView
                            android:layout_marginTop="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Seminar"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/Aduan"
                    android:elevation="8dp"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:padding="10dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivWorkshop"
                            android:padding="5dp"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/workshop"/>

                        <TextView
                            android:layout_marginTop="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Workshop"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/talkshow"
                    android:elevation="8dp"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:padding="10dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivTalkshow"
                            android:padding="5dp"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@drawable/talkshow"
                            android:text="Kecamatan"/>

                        <TextView
                            android:layout_marginTop="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Talkshow"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>